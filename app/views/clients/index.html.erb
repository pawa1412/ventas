<p id="notice"><%= notice %></p>

<h1>Clients</h1>

<table>
  <thead>
    <tr>
      <th>Rut</th>
      <th>Unidad compra</th>
      <th>Razon</th>
      <th>Direccion</th>
      <th>Comuna</th>
      <th>Region</th>
      <th>Institucion</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @clients.each do |client| %>
      <tr>
        <td><%= client.rut %></td>
        <td><%= client.unidad_compra %></td>
        <td><%= client.razon %></td>
        <td><%= client.direccion %></td>
        <td><%= client.comuna %></td>
        <td><%= client.region %></td>
        <td><%= client.institucion %></td>
        <td><%= link_to 'Show', client %></td>
        <td><%= link_to 'Edit', edit_client_path(client) %></td>
        <td><%= link_to 'Destroy', client, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

