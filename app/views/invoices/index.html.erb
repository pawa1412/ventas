<p id="notice"><%= notice %></p>

<h1>Invoices</h1>

<table>
  <thead>
    <tr>
      <th>Sale</th>
      <th>Fecha despacho</th>
      <th>Orden transporte</th>
      <th>Empresa</th>
      <th>Numero factura</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @invoices.each do |invoice| %>
      <tr>
        <td><%= invoice.sale %></td>
        <td><%= invoice.fecha_despacho %></td>
        <td><%= invoice.orden_transporte %></td>
        <td><%= invoice.empresa %></td>
        <td><%= invoice.numero_factura %></td>
        <td><%= link_to 'Show', invoice %></td>
        <td><%= link_to 'Edit', edit_invoice_path(invoice) %></td>
        <td><%= link_to 'Destroy', invoice, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

